# ============================================================================
# ADAPTER SERVICE ENVIRONMENT VARIABLES
# ============================================================================
# All ADAPTER_* variables are loaded with the ADAPTER_ prefix by config.py
# This follows 12-factor app principles for configuration management.
# Copy this file to .env and update with your actual values.

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# API server host address (use 0.0.0.0 to bind to all interfaces)
ADAPTER_API_HOST=0.0.0.0

# API server port number
ADAPTER_API_PORT=8000

# Number of worker processes (default: 4, adjust based on CPU cores)
ADAPTER_WORKERS=4

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ADAPTER_LOG_LEVEL=info

# ============================================================================
# API SECURITY
# ============================================================================

# API secret key for JWT tokens and encryption (min 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=your-api-secret-key-min-32-chars

# Allowed CORS origins (comma-separated list)
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/transform_army

# Database connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Database migration retry settings (used by docker-entrypoint.sh)
DB_MAX_RETRIES=30
DB_RETRY_INTERVAL=2

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# ============================================================================
# EXTERNAL SERVICES - CRM PROVIDERS
# ============================================================================

# HubSpot API Key
# Obtain from: https://app.hubspot.com/settings/integrations/api
ADAPTER_HUBSPOT_API_KEY=

# Salesforce OAuth credentials
# Obtain from: https://login.salesforce.com/ -> Setup -> App Manager
ADAPTER_SALESFORCE_CLIENT_ID=
ADAPTER_SALESFORCE_CLIENT_SECRET=

# Pipedrive API Key
# Obtain from: https://app.pipedrive.com/settings/api
ADAPTER_PIPEDRIVE_API_KEY=

# ============================================================================
# EXTERNAL SERVICES - HELPDESK PROVIDERS
# ============================================================================

# Zendesk configuration
# Subdomain: Your Zendesk subdomain (e.g., 'mycompany' for mycompany.zendesk.com)
ADAPTER_ZENDESK_SUBDOMAIN=

# Zendesk user email address (required for authentication)
ADAPTER_ZENDESK_EMAIL=user@example.com

# Zendesk API token
# Obtain from: https://YOUR_SUBDOMAIN.zendesk.com/admin/apps-integrations/apis/zendesk-api
ADAPTER_ZENDESK_API_TOKEN=

# Intercom access token
# Obtain from: https://app.intercom.com/a/apps/_/developer-hub
ADAPTER_INTERCOM_ACCESS_TOKEN=

# Freshdesk API key
# Obtain from: https://YOUR_DOMAIN.freshdesk.com/a/admin/api_settings
ADAPTER_FRESHDESK_API_KEY=

# ============================================================================
# EXTERNAL SERVICES - CALENDAR PROVIDERS
# ============================================================================

# Google Calendar OAuth credentials
# Obtain from: https://console.cloud.google.com/apis/credentials
ADAPTER_GOOGLE_CLIENT_ID=
ADAPTER_GOOGLE_CLIENT_SECRET=

# Microsoft Calendar OAuth credentials
# Obtain from: https://portal.azure.com -> Azure Active Directory -> App registrations
ADAPTER_MICROSOFT_CLIENT_ID=
ADAPTER_MICROSOFT_CLIENT_SECRET=

# ============================================================================
# EXTERNAL SERVICES - EMAIL PROVIDERS
# ============================================================================

# SendGrid API key
# Obtain from: https://app.sendgrid.com/settings/api_keys
ADAPTER_SENDGRID_API_KEY=

# SMTP Configuration (alternative to SendGrid)
ADAPTER_SMTP_HOST=
ADAPTER_SMTP_PORT=587

# ============================================================================
# EXTERNAL SERVICES - AI/LLM PROVIDERS
# ============================================================================

# OpenAI API key
# Obtain from: https://platform.openai.com/api-keys
ADAPTER_OPENAI_API_KEY=

# Anthropic API key
# Obtain from: https://console.anthropic.com/account/keys
ADAPTER_ANTHROPIC_API_KEY=

# ============================================================================
# EXTERNAL SERVICES - VECTOR DATABASE
# ============================================================================

# Qdrant vector database URL
ADAPTER_QDRANT_URL=http://localhost:6333

# Qdrant API key (optional, for cloud deployments)
ADAPTER_QDRANT_API_KEY=

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Sentry DSN for error tracking
# Obtain from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
SENTRY_DSN=

# Sentry environment tag
SENTRY_ENVIRONMENT=development

# ============================================================================
# FEATURE FLAGS & ENVIRONMENT
# ============================================================================

# Application environment (development, staging, production)
ADAPTER_ENVIRONMENT=development

# Enable debug mode (verbose logging, detailed errors)
ADAPTER_DEBUG=false

# Enable audit logging for all requests
ADAPTER_ENABLE_AUDIT_LOGGING=true

# Enable request timing middleware
ADAPTER_ENABLE_REQUEST_TIMING=true