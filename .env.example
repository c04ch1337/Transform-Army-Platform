# =============================================================================
# Authentication & Security
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Encryption
ENCRYPTION_KEY=your-encryption-key-base64-encoded

# Session
SESSION_SECRET=your-session-secret-key-min-32-chars
SESSION_COOKIE_NAME=transform_army_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# DataDog (production)
# DATADOG_API_KEY=
# DATADOG_APP_KEY=
# DATADOG_SITE=datadoghq.com

# New Relic (production)
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=transform-army-ai

# =============================================================================
# Email Service (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@transform-army.ai

# =============================================================================
# Storage
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=transform-army-files

# MinIO (local development alternative)
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=transform-army-dev

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_LANGGRAPH_ENABLED=false
FEATURE_VECTOR_DB_ENABLED=false
FEATURE_ADVANCED_ANALYTICS_ENABLED=false
FEATURE_SSO_ENABLED=false

# =============================================================================
# Development Tools
# =============================================================================
# Debug
DEBUG=false
LOG_LEVEL=info
VERBOSE_LOGGING=false

# Hot reload
HOT_RELOAD=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/transform_army_test

# =============================================================================
# Multi-tenancy
# =============================================================================
DEFAULT_TENANT_ID=default
MAX_TENANTS=100

# =============================================================================
# Billing & Metering
# =============================================================================
CREDITS_PER_ACTION=1
DEFAULT_CREDITS_MONTHLY=10000
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# Docker Compose (local development)
# =============================================================================
COMPOSE_PROJECT_NAME=transform-army-ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=transform_army
REDIS_PASSWORD=