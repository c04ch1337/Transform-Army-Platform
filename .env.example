# =============================================================================
# Transform Army AI Platform - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# =============================================================================
# Application Environment
# =============================================================================
NODE_ENV=development
PYTHON_ENV=development

# =============================================================================
# Web Application (Next.js)
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Next.js specific
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-chars

# =============================================================================
# Adapter Service (FastAPI)
# =============================================================================
ADAPTER_HOST=0.0.0.0
ADAPTER_PORT=8000
ADAPTER_WORKERS=4
ADAPTER_LOG_LEVEL=info

# API Security
API_SECRET_KEY=your-api-secret-key-min-32-chars
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/transform_army
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# Vector Database
# =============================================================================
# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=transform-army-embeddings

# Weaviate (alternative)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your-weaviate-api-key

# =============================================================================
# AI/LLM Configuration
# =============================================================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# LangChain
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=transform-army-ai

# =============================================================================
# Phase 1: Relevance AI Configuration
# =============================================================================
RELEVANCE_API_KEY=your-relevance-api-key
RELEVANCE_PROJECT_ID=your-relevance-project-id
RELEVANCE_REGION=us

# Agent IDs (populated after Relevance setup)
RELEVANCE_AGENT_BDR=
RELEVANCE_AGENT_SUPPORT=
RELEVANCE_AGENT_RESEARCH=
RELEVANCE_AGENT_OPS=
RELEVANCE_AGENT_LIBRARIAN=
RELEVANCE_AGENT_QA=

# =============================================================================
# External Service Integrations
# =============================================================================

